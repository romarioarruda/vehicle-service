{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true
    },
    "include": [
        "src/**/*",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}